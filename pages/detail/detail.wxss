height: 34px;
line-height: 34px;
font-size: 15px;
}
.seatName,.price{  
font-weight: 600;

}
.price{
  font-size: 16px;
  color:#f00;
}
.seats{
  color: gray;
}
.QP{
  background: #f00;
  width: 17%;
  font-size: 15px;
  border-radius: 19px;
  color: white;
  height: 25px;
  line-height: 25px;
  margin-right: 13px;
  margin-left: 17px;
